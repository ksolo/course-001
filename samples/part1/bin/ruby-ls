#!/usr/bin/env ruby

require 'open3'
require 'optparse'

module RubyLS

  class Application

    attr_reader :directory

    def initialize(argv)
      @directory = argv[0] || Dir.pwd
      @pattern = argv[1]
    end

    def run
      hidden_file = /^\./
      puts Dir.entries(directory).select {|dir| dir !~ hidden_file }
    end

  end

end

RubyLS::Application.new(ARGV).run
